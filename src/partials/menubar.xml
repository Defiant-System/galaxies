<MenuBar>
	<Menu name="Galaxies">
		<Menu name="About Galaxies" shell="win -a"/>
		<Menu type="divider"/>
		<Menu name="Quit Galaxies" shell="win -c"/>
	</Menu>
	<Menu name="Game">
		<Menu name="Undo"/>
		<Menu name="Redo"/>
		<Menu type="divider"/>
		<Menu name="Pause" click="pause-game" check-group="pause-game"/>
		<Menu name="Audio" click="toggle-music" is-checked="1"/>
		<Menu type="divider"/>
		<Menu name="Settings&#8230;" invoke="toolbar-options"/>
	</Menu>
	<Menu name="Help">
		<Menu name="Help" click="open-help"/>
		<Menu type="divider"/>
		<Menu name="License"/>
	</Menu>

	<Menu for="toolbar-options">
		<Menu name="Size&#8230;">
			<Menu name="5x5" check-group="galaxies-puzzle-size"/>
			<Menu name="7x7" check-group="galaxies-puzzle-size" is-checked="1"/>
			<Menu name="9x9" check-group="galaxies-puzzle-size"/>
			<Menu name="11x11" check-group="galaxies-puzzle-size"/>
			<Menu name="13x13" check-group="galaxies-puzzle-size"/>
		</Menu>
		<Menu name="Difficulty&#8230;">
			<Menu name="Normal" check-group="galaxies-game-difficulty" is-checked="1"/>
			<Menu name="Ridiculous" check-group="galaxies-game-difficulty"/>
		</Menu>
		<Menu type="divider"/>
		<Menu name="Endless" check-group="galaxies-endless-game"/>
	</Menu>
</MenuBar>